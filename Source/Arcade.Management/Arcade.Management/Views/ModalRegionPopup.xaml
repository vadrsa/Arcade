<dx:ThemedWindow
    x:Class="Arcade.Management.Views.ModalRegionPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:kernel="clr-namespace:Kernel;assembly=Kernel"
    xmlns:inf="clr-namespace:Infrastructure;assembly=Infrastructure.Wpf"
    xmlns:const="clr-namespace:Infrastructure.Constants;assembly=Infrastructure.Wpf"
    xmlns:prism="http://prismlibrary.com/"
    >
    <DockPanel>
        <dxr:RibbonControl x:Name="ribbon" inf:VisibilityManager.RibbonVisibleIfEmpty="False" kernel:DynamicRegionManager.ScreenRegion="{x:Static const:KnownRegions.Ribbon}"  DockPanel.Dock="Top" MinimizationButtonVisibility="Visible" ShowApplicationButton="False" ToolbarShowMode="ShowAbove" >
        </dxr:RibbonControl>

        <ContentControl kernel:DynamicRegionManager.ScreenRegion="{x:Static const:KnownRegions.Content}" Grid.Column="1" />
        
    </DockPanel>
</dx:ThemedWindow>
